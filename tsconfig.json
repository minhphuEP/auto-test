{
    "compilerOptions": {
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "module": "CommonJS",
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "dist",
    },
    "include": [
        "src/**/*",
        "tests/*"
    ]
}